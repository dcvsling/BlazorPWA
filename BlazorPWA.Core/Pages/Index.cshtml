@page "/"
@page "/{page}"

<Render Renderer="md" Path="@Path">
    <Loading>
        <p>
            Loading....
        </p>
    </Loading>
    <Loaded>
        <p>@context</p>
    </Loaded>
    <Error>
        <p>something bad is happened.....</p>
        <p>@context.ToString()</p>
    </Error>
</Render>

@functions {
    public string Path => string.Join("/", Page);
    [Parameter] string Page { get; set; } = "README";
}